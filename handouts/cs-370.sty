% DEFINE HEADER

\def\maketitle{
    \begingroup
    \newpage
    \global\@topnum\z@\@maketitle
    \thispagestyle{header}
    \endgroup
    \let\maketitle\relax
    \let\@maketitle\relax
}

\def\@maketitle{
    \newpage
    \hrule height 6pt
    \vskip 0.6em
    \makebox[1in][l]{\dunhb \classcode}{\dunhb \classname \hfill}
    \vskip-0.1in
    \makebox[1in][l]{\dunhb \term}{\dunhb \instructor \hfill \dunhd \title}
    \vskip 0.6em
    \hrule height 6pt
    \vskip 0.15in
}

\def\section{
    \@startsection{section}{1}{\z@}{-3.0ex plus -.6ex minus -.2ex}
                  {1.3ex plus .1ex}{\dunhb}
}

\def\subsection{
    \@startsection{subsection}{2}{\z@}{-1.6ex plus -.5ex minus -.1ex}
                  {0.9ex plus .1ex}{\dunha}
}

